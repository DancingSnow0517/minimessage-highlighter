{
  "name": "minimessage-highlighter",
  "displayName": "Minimessage Highlighter",
  "description": "A VS Code extension for highlighting MiniMessage syntax and parsing JSON, TOML, and YAML text elements with position tracking",
  "version": "0.0.1",
  "publisher": "minimessage-highlighter",
  "author": {
    "name": "DancingSnow",
    "email": "1121149616@qq.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DancingSnow0517/minimessage-highlighter"
  },
  "bugs": {
    "url": "https://github.com/DancingSnow0517/minimessage-highlighter/issues"
  },
  "homepage": "https://github.com/DancingSnow0517/minimessage-highlighter#readme",
  "keywords": [
    "vscode",
    "extension",
    "minimessage",
    "json",
    "toml",
    "yaml",
    "parser",
    "syntax-highlighting"
  ],
  "license": "MIT",
  "contributors": [
    {
      "name": "DancingSnow",
      "email": "1121149616@qq.com"
    }
  ],
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "icon": "images/icon.png",
  "galleryBanner": {
    "color": "#C80000",
    "theme": "dark"
  },
  "activationEvents": [
    "onLanguage:json",
    "onLanguage:toml", 
    "onLanguage:yaml"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "minimessage-highlighter.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "minimessage-highlighter.testJsonParser",
        "title": "Test JSON Parser"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.102.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.2",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
